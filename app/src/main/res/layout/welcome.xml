<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorPrimary"
    android:padding="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@mipmap/ic_pwd"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="15dp"/>

            <TextView
                android:text="BIENVENIDO"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/textBtn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"/>

            <EditText
                android:id="@+id/ed_welcome_usuario"
                android:textColorHint="@color/textBtn"
                android:hint="Ingrese su nombre"
                android:textColor="@color/textBtn"
                android:drawableStart="@drawable/ic_account_circle"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account_circle" />

            <EditText
                android:id="@+id/ed_welcome_password"
                android:textColorHint="@color/textBtn"
                android:hint="Ingrese contraseña"
                android:maxLength="4"
                android:textColor="@color/textBtn"
                android:inputType="numberPassword"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/key_outline"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/key_outline" />

            <Button
                android:id="@+id/btn_welcome_guardar_usuario"
                android:text="ACEPTAR"
                android:textColor="@color/textBtn"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondo"
                android:padding="15dp"
                android:layout_margin="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="la contraseña la usara para entrar a la app"
                android:textStyle="bold"
                android:textColor="@color/textBtn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>