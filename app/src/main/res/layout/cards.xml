        android:id="@+id/rview_cards"
        android:layout_margin="@dimen/recicler_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/adapter_item_cards"/>

</androidx.constraintlayout.widget.ConstraintLayout>